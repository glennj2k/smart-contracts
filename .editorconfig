root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
# indent_style = space
# indent_size = 4

[*.{coffee,js,ts}]
indent_style = space
indent_size = 2
max_line_length = 96

[*.sol]
indent_style = space
indent_size = 4

[*.sql]
indent_style = tab

[*.json]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{html,mako,less,org}]
indent_style = tab
